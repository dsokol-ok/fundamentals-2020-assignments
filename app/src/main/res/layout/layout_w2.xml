<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMoonYellow">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Box One"
        android:paddingVertical="16dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="@color/colorMyGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="Box Two"
            android:textColor="@color/colorWhite"
            android:background="@color/colorMyRed"
            android:layout_gravity="end"
            android:gravity="top"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="Box Three"
            android:textColor="@color/colorWhite"
            android:background="@color/colorMyYellow"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="16dp"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="Box Three"
            android:textColor="@color/colorWhite"
            android:background="@color/colorMyGreen"
            android:padding="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginVertical="16dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Red"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorLightGray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Yellow"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:background="@color/colorLightGray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Green"
            android:padding="10dp"
            android:gravity="end"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="@color/colorLightGray"/>

    </LinearLayout>

</LinearLayout>